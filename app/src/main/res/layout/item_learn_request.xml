<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/item_border"
        android:layout_marginBottom="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/textViewFirstName2"
                    android:text="First Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

            <TextView
                    android:id="@+id/textViewLastName2"
                    android:text="Last Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/textViewMajor2"
                    android:text="Major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

            <TextView
                    android:id="@+id/textViewCourseName2"
                    android:text="Course Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/textViewPreferredTime"
            android:text="Preferred Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
    android:layout_marginStart="174dp"/>

    <TextView
            android:id="@+id/textViewDescription2"
            android:text="Description Goes Here...."
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="336dp"
            android:layout_height="111dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end"
            android:background="@drawable/custom_edit_text"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

        <ImageButton
                android:id="@+id/buttonUpvote"
                android:layout_marginTop="3dp"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:background="@drawable/upvote_arrow_selector"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="0dp"/>

        <TextView
                android:id="@+id/textViewUpvotesCount"
                android:text="0"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@id/buttonUpvote"
                android:layout_alignStart="@id/buttonUpvote"/>

        <Button
                android:id="@+id/buttonArrangeClass"
                android:layout_width="308dp"
                android:layout_height="44dp"
                android:text="Arrange a Class"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:textColor="@android:color/white"
                android:backgroundTint="#5243B9"
                android:layout_marginStart="50dp"
                android:background="@drawable/rounded_button_background"/>

    </RelativeLayout>

</LinearLayout>
