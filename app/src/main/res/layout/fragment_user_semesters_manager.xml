<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserFragments.UserSettingsFragment"
        android:background="@android:color/white"
        android:textColor="@android:color/black">

    <!-- Place your views here with desired arrangement -->

    <ImageView
            android:src="@drawable/rec"
            android:layout_width="462dp"
            android:layout_height="96dp"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.176" />

    <TextView
            android:text="My Study Plan"
            android:layout_width="216dp"
            android:layout_height="55dp"
            android:id="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.02" />

    <Button
            android:text="Add Semester"
            android:layout_width="336dp"
            android:textSize="24dp"
            android:background="@drawable/rounded_button"
            android:layout_height="50dp"
            android:id="@+id/semesterFragBtn"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintVertical_bias="0.955" />

    <TextView
            android:text="Show Your Added Semester"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_width="375dp"
            android:layout_height="56dp"
            android:id="@+id/ViewSemester"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.562"
            app:layout_constraintVertical_bias="0.182"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textContainer"
            android:orientation="vertical" tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="16dp">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
